{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "backend" : ["packages/backend/src"],
      "frontend" : ["packages/frontend/src"]
    }
  },
  "exclude": [
    "**/node_modules/**/*",
    "packages/*/dist/**/*"
  ],
  "include": [
    "packages/**/*.ts"
  ]
}
